import os

Import('qttbenv')

qttbenv.AppendUnique(CPPPATH=['../../ColorBar'])

# uic ppitest form
qttbenv.Uic4('PPITest.ui')

# build ppitest
ppitest = qttbenv.Program(
   'ppitest',
   ['main.cpp','PPITest.cc'],
   LIBS=['QtCore','QtGui','QtOpenGL','ppi','colorbar','glut'],
   LIBPATH=['../','../../ColorBar','$QWTDIR/lib','$QTDIR/lib','$GLUTDIR/lib']
)

qttbenv.InstallBin(ppitest)