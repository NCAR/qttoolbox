import os

Import('env')
env = env.Create("qttoolbox.knob", tools = ['default', 'qt'])

my_tools = env.Require(['PKG_QT','PKG_QWT'])

mydir=Dir('.')

def PKG_QTTOOLBOX_KNOB(env):
        env.Append(CPPPATH=[mydir,])
	env.Append(LIBPATH=[mydir,])
	env.Append(LIBS=['knob',])
	env.Append(QT_UICIMPLFLAGS=['-L', str(mydir)])
	env.Apply(my_tools)

Export('PKG_QTTOOLBOX_KNOB')

lib = env.SharedLibrary('knob', 
Split("""
 KnobBase.ui
 Knob.cpp
 KnobPlugin.cpp
"""))

Default(lib)

env.Install(os.path.join(env['QTDIR'],'plugins','designer'), lib)