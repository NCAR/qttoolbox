import os

Import('env')

# uic ppitest form
env.Uic4('PPITest.ui')

# build ppitest
ppitest = env.Program(
   'ppitest',
   ['main.cpp','PPITest.cc'],
   LIBS=['QtCore','QtGui','QtOpenGL','ppi','colorbar','glut'],
   LIBPATH=['../','../../ColorBar','$QWTDIR/lib','$QTDIR/lib','$GLUTDIR/lib']
)

Default(ppitest)

env.InstallBin(ppitest)