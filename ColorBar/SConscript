import os

SConscript('Test/SConscript')

env = Environment(tools=['default', 'qt4'])
env.AppendUnique(CPPPATH=['..', '$QTDIR/include/QtDesigner'])
env.AppendUnique(QT4_MOCFROMHFLAGS=['-I', '$QTDIR/include/QtDesigner/'])
env.EnableQt4Modules(['QtCore','QtGui',])

# build colorbar shared library
colorbar = env.SharedLibrary(
   'colorbar',
   ['ColorBar.cpp','ColorBarPlugin.cpp','ColorMap.cpp']
)

Default(colorbar)

installdir = os.path.join('$QTDIR','plugins','designer')
env.Install(installdir, colorbar)
env.Alias('install', installdir)



